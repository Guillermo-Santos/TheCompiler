<Page
    x:Class="Forge.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:diag="using:SparkCore.IO.Diagnostics"
    xmlns:local="using:Forge.Views" 
    xmlns:models="using:Forge.Core.Models"
    xmlns:helpers="using:Forge.Helpers"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="FolderTemplate" x:DataType="models:Folder">
            <TreeViewItem AutomationProperties.Name="{x:Bind FolderName}"
                          ItemsSource="{x:Bind Directions}" IsExpanded="True">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Assets/folder.png" Height="20" Width="20"/>
                    <TextBlock Margin="0,0,10,0"/>
                    <TextBlock Text="{x:Bind FolderName}" />
                </StackPanel>
            </TreeViewItem>
        </DataTemplate>
        <DataTemplate x:Key="DocumentTemplate" x:DataType="models:Document">
            <TreeViewItem AutomationProperties.Name="{x:Bind FileName}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Assets/file.png" Height="20" Width="20"/>
                    <TextBlock Margin="0,0,10,0"/>
                    <TextBlock Text="{x:Bind FileName}"/>
                </StackPanel>
            </TreeViewItem>
        </DataTemplate>
        <helpers:ProjectFileTemplateSelector x:Key="ItemTemplateSelector"
                                    FolderTemplate="{StaticResource FolderTemplate}"
                                    DocumentTemplate="{StaticResource DocumentTemplate}"
        />
    </Page.Resources>
    <Grid x:Name="ContentArea" ColumnSpacing="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*" MaxWidth="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" BorderThickness="1" BorderBrush="DimGray">
            <Border  BorderThickness="1" BorderBrush="DimGray">
                <CommandBar IsOpen="False" OverflowButtonVisibility="Collapsed">
                    <AppBarButton Icon="Refresh" Command="{x:Bind ViewModel.RefreshCommand}"/>
                </CommandBar>
            </Border>
            <TreeView x:Name="ProjView" 
                      SelectedItem="{x:Bind ViewModel.SelectedDirection, Mode=TwoWay}" 
                      ItemsSource="{x:Bind ViewModel.ProjectService.ProjectRoot}" 
                      ItemTemplateSelector="{StaticResource ItemTemplateSelector}" 
                      DoubleTapped="{x:Bind ViewModel.OnOpenRequest}"
                      Height="auto" CanDragItems="False" AllowDrop="False"/>
        </StackPanel>
        <Grid Grid.Column="1" RowSpacing="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80*" MaxHeight="200"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="1" Padding="5">
                <TabView x:Name="codeTabs"
                         IsAddTabButtonVisible="False"
                         CloseButtonOverlayMode="OnPointerOver"
                         TabCloseRequested="TabView_TabCloseRequested"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         TabItemsSource="{x:Bind ViewModel.Files}"
                         SelectedItem="{x:Bind ViewModel.SelectedDocument, Mode=TwoWay}">
                    <TabView.TabItemTemplate>
                        <DataTemplate x:DataType="models:Document">
                            <TabViewItem Header="{x:Bind FileName}">
                                <TabViewItem.Content>
                                    <local:FilePage FileName="{x:Bind Path}" Text="{x:Bind Text}"/>
                                </TabViewItem.Content>
                            </TabViewItem>
                        </DataTemplate>
                    </TabView.TabItemTemplate>
                </TabView>
            </Border>
            <Border Grid.Row="1" 
                  BorderThickness="1" 
                  BorderBrush="DimGray" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch">
                <TabView x:Name="BottonTabView"
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"
                         IsAddTabButtonVisible="False"
                         AllowFocusWhenDisabled="False">
                    <TabViewItem Header="Errores"
                                 IsClosable="False">
                        <TabViewItem.Content>
                            <ListBox x:Name="errors" 
                                     ItemsSource="{x:Bind ViewModel.Diagnostics, Mode=OneWay}"
                                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                                     DoubleTapped="errors_DoubleTapped"
                                     >
                                <ListBox.ItemTemplate>
                                    <DataTemplate x:DataType="diag:Diagnostic">
                                        <TextBlock Text="{x:Bind FullMessage}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabViewItem.Content>
                    </TabViewItem>
                </TabView>
            </Border>
        </Grid>
    </Grid>
</Page>